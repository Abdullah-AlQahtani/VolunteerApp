<div class="opportunity">
 <%= link_to 'Back to opportunities', opportunities_path, class: "btn btn-success" %>
<% if user_signed_in? && current_user.admin == true %>
    <%= link_to 'Delete opportunity', @opportunity, class: "btn btn-danger", method: :delete %>
<% end %>
<br>
<br>

<h1> <%= @opportunity.name %> Event Page</h1>

<p> Creator: <%= @opportunity.user.name %> </p>

<p> Name: <%= @opportunity.name %> </p>

<p> Description: <%= @opportunity.description %> </p>

<p> Date of event: <%= @opportunity.dateOfEvent.strftime("%Y-%m-%d") %> </p>

<p> Location: <%= @opportunity.location %> </p>

<br>

<%= render partial: 'app' %>

<br>
<h6>Volunteer List :</h6>

<ul>
    <% @opportunity.app_users.each do |app| %>
        <li><%= link_to app.user.name, user_path(app.user) %></li>
    <% end %>
</ul>
</div>