<%= form_for @opportunity do |f| %>

<div class="field">
 Publisher:<a style="color:red"> <%= current_user.name %> </a>
 <br>
  <br>
</div>

<div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name, autocomplete: "name" %>
</div>

<br>

<div class="field">
  <%= f.label :description %><br />
  <%= f.text_field :description %>
</div>

<br>

<div class="field">
  <%= f.label :dateOfEvent, "Date of Event" %><br />
  <%= f.date_select :dateOfEvent, autocomplete: "dateOfEvent", order: [:day, :month, :year], prompt: { day: 'Select day', month: 'Select month', year: 'Select year' }, start_year: Date.today.year , end_year: Date.today.year + 1 %>
</div>

<br>

<div class="field">
  <%= f.label :gender %><br />
  <%= f.select :gender, ['Male', 'Female', 'Both']%>
</div>

<br>

<div class="field">
  <%= f.label :location %><br />
  <%= f.text_field :location %>
</div>

<br>
  <div class="actions">
    <%= f.submit %>
  </div>
  <br>

<% end %>